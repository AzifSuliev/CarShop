@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (Product product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div id="cardSize" class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageURL" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Brand.Name</p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.CarName</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-center opacity-75">
                                    Базовая комплектация
                                    <span>
                                        @product.basicEquipmentPrice.ToString("c")
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-center opacity-75">
                                    Полная комплектация
                                    <span>
                                        @product.fullEquipmentPrice.ToString("c")
                                    </span>
                                </p>
                            </div>
                            <div>
                                <a asp-area="Customer" asp-controller="Home" asp-action="Details"
                                   asp-route-productId="@product.Id"
                                   class="btn btn-primary bg-gradient border-0 form-control">
                                    Подробнее
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>