@model List<Product>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">
                    Список автомобилей
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4">
            <div class="col-12 text-end pb-4">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Добавить новый автомобиль
                </a>
            </div>
        </div>

        <table class=" table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Название авто
                    </th>
                    <th>
                        Описание
                    </th>
                    <th>
                        Цена базовой комплектации
                    </th>
                    <th>
                        Цена полной комплектации
                    </th>
                    <th>
                        Тип кузова
                    </th>
                    <th>
                        Марка
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product obj in Model.OrderBy(u => u.Id))
                {
                    <tr>
                        <td style="width:150px">@obj.CarName</td>
                        <td>@obj.Description</td>
                        <td>@obj.basicEquipmentPrice</td>
                        <td>@obj.fullEquipmentPrice</td>
                        <td style="width:100px">@obj.Category.Name</td>
                        <td style="width:100px">@obj.Brand.Name</td>
                        <td style="width:180px" role="group">
                            <div>
                                <a style="width:180px" asp-controller="Product" asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-secondary mx-4 my-2">
                                    <i class="bi bi-pencil-square"></i> Редактировать
                                </a>
                                <a style="width:180px" asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-4 my-2">
                                    <i class="bi bi-trash3-fill"></i> Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
