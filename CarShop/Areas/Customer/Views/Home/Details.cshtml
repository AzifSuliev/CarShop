@model ShoppingCart

<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Product.Brand.Name</h3>
                    <p class="text-white-50 fw-semibold mb-0">@Model.Product.CarName</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Главная страница</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.Product.ImageURL" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge">Тип кузова: @Model.Product.Category.Name</span>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-5 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Базовая комплектация</div>
                            </div>
                            <div class="p-1 col-3 col-lg-5 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Полная комплектация</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-5 bg-white text-warning fw-bold">
                                <div>@Model.Product.basicEquipmentPrice.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-5 bg-white text-warning fw-bold">
                                <div>@Model.Product.fullEquipmentPrice.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">Описание</p>
                            <p>@Model.Product.Description</p>
                        </div>
                        <span class="input-group-text bg-primary text-white border-0 fw-semibold" style="width:100px"
                            id="inputGroup-sizing-default">
                            Count
                        </span>
                        <input asp-for="Count" type="number" value="1" class="form-control text-end my-2" style="width:100px"
                            aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
                        
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" 
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Добавить в корзину
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

